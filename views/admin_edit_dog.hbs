  <!-- custom CSS -->
  <link href="../css/PAWSter%20Care.css" rel="stylesheet">
    
  <!-- custom js + slider -->
    <script src="../js/PAWSter%20Care.js" type="text/javascript"></script>
    <script src="../js/admin_add_dog.js" type="text/javascript"></script>
    <script>@Html.TextBoxFor(m => m.dog_birthday, "{0:yyyy-MM-dd}", new { @type = "date"  })</script>

</head>

<body>
 {{> navbar_admin}}
    <script>HighlightTabAdmin("see_dogs")</script><br><br><br>
    
<!-- Main Content -->
    
  <div class="container">
      <h1>Edit {{dog.name}}'s Profile</h1>
      <hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-4">
        <div class="text-center">
          <img id="upload_ID" style="max-height: 350px; max-width: 350px" src="../uploads/{{dog.image}}" class="avatar img-circle" alt="avatar">
          <h6>Upload a different photo...</h6>
          
          <form method="post" action="admin_edit_dog" class="form-horizontal" role="form" enctype="multipart/form-data">
            <input type="file" onchange="previewFile()" id="avatar" class="form-control" accept="image/jpg, image/png" name="dog_image">  
        </div>
      </div>
        
          <!-- edit form column -->
      <div class="col-md-8 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-exclamation-triangle"></i>
          <strong>NOTE: </strong> The site will automatically save your edits and display them for all user screens.
        </div>
          
        <h3>General Information</h3>
        
          <div class="form-group">
              <div class="col-md-6">
                <img src="../img/name.png" style="height: 25px;">
                <label>&nbsp;&nbsp;Name</label>
              </div>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="dog_name" value="{{dog.name}}">
            </div>
          </div>
            <div class="form-group">
                <div class="col-md-6">
                <img src="../img/breed.png" style="height: 25px;">
                <label>&nbsp;&nbsp;Breed</label>
              </div>
            <div class="col-lg-8">
            <select type="text" class="form-control" id = "select_breed" name="dog_breed" required>
                    <option value="{{dog.breed}}" selected hidden>{{dog.breed}}</option>
                    <option value="Beagle">Beagle</option>
                    <option value="Corgi">Corgi</option>    
                    <option value="Dachshund">Dachshund</option>
                    <option value="Golden Retriever">Golden Retriever</option>
                    <option value="Husky">Husky</option>
                    <option value="Schnauzer">Schnauzer</option>
            </select>
            </div>
          </div>
          <div class="form-group">
              <div class="col-md-6">
                <img src="../img/birthday.png" style="height: 25px;">
                <label>&nbsp;&nbsp;Date of Birth</label>
              </div>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="dog_birthday" value="{{dog.birthday}}">
            </div>
          </div>
          
          <div class="row" style="margin-left:1px">
                            <div class="col-sm-3 form-group">
                                <div class="col-md-6.1">
                                    <img src="../img/gender.png" style="height: 25px;">
                                    <label>&nbsp;&nbsp;Gender</label>
                                </div>
                                <select type="text" class="form-control" name="dog_gender" required>
                                    <option value="{{dog.gender}}" selected hidden>{{dog.gender}}</option>
                                        <option value="male">male</option>
                                        <option value="female">female</option>
                                </select>
							</div>
							<div class="col-sm-3 form-group">
                                <div class="col-md-6.1">
                                    <img src="../img/height.png" style="height: 25px;">
                                    <label>&nbsp;&nbsp;Height (inches)</label>
                                </div>
								<input type="number" class="form-control" name="dog_height" value="{{dog.height}}"> 
							</div>
                            <div class="col-sm-3 form-group">
                                <div class="col-md-6.1">
                                    <img src="../img/weight.png" style="height: 25px;">
                                    <label>&nbsp;&nbsp;Weight (pounds)</label>
                                </div>
								<input type="number" class="form-control" name="dog_weight" value="{{dog.weight}}">
							</div>
          </div>
          <div class="form-group">
              <div class="col-md-6">
                    <img src="../img/name.png" style="height: 25px;">
                    <label>&nbsp;&nbsp;Specific Conditions</label>
              </div>
            <div class="col-md-8">
              <input class="form-control" type="text" name="dog_conditions" value="{{dog.conditions}}">
            </div>
          </div>
            <div class="form-group">
            <label class="col-md-5 control-label">give your dog a short description:</label>
            <div class="col-md-8">
                <textarea class="form-control" rows="5" name="dog_description">{{dog.description}}</textarea>
            </div>
          </div>
          
          <hr>
          <h3>Character Information</h3>
          <div class="form-group">
              <div class="col-md-6">
                    <img src="../img/energy.png" style="height: 25px;">
                    <label>&nbsp;&nbsp;Energy Level</label>
              </div>
            <div class="col-md-8">
            <select type="text" class="form-control" name="dog_energy_level" required>
                    <option value="{{dog.energy_level}}" selected hidden>{{dog.energy_level}}</option>
                    <option value="low">low</option>
                    <option value="moderate">moderate</option>
                    <option value="high">high</option>
            </select>
            </div>
          </div>
          <div class="form-group">
               <div class="col-md-6">
                    <img src="../img/training.png" style="height: 35px;">
                    <label>Ease of Training</label>
              </div>
            <div class="col-md-8">
            <select type="text" class="form-control" name="dog_ease_of_training" required>
                    <option value="{{dog.ease_of_training}}" selected hidden>{{dog.ease_of_training}}</option>
                    <option value="easy">easy</option>
                    <option value="average">average</option>
                    <option value="difficult">difficult</option>
            </select>
            </div>
          </div>
          <div class="form-group">
              <div class="col-md-6">
                    <img src="../img/grooming.png" style="height: 25px;">
                    <label>&nbsp;&nbsp;Grooming Requirements</label>
              </div>
            <div class="col-md-8">
            <select type="text" class="form-control" name="dog_grooming_requirements" required>
                    <option value="{{dog.grooming_requirements}}" selected hidden>{{dog.grooming_requirements}}</option>
                    <option value="low">low</option>
                    <option value="moderate">moderate</option>
                    <option value="high">high</option>
            </select>
            </div>
          </div>
          <div class="form-group">
              <div class="col-md-6">
                    <img src="../img/affection.png" style="height: 25px;">
                    <label>&nbsp;&nbsp;Affection Needs</label>
              </div>
            <div class="col-md-8">
            <select type="text" class="form-control" name="dog_affection_needs" required>
                    <option value="{{dog.affection_needs}}" selected hidden>{{dog.affection_needs}}</option>
                    <option value="independent">independent</option>
                    <option value="balanced">balanced</option>
                    <option value="cuddly">cuddly</option>
            </select> 
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
                <input type = "hidden" name="id" value="{{dog._id}}">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
                <a href = 'admin_dogs'><button class="btn btn-default">Cancel</button></a>
            </div>
          </div>
        </form>
      </div>
      
    </div>
  </div><br>

</body>

</html>
