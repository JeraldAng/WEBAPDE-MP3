<body>
  {{> navbar}}<br><br><br>

<div class="container">
    {{#each reqList}}
	<table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr>
							<th style="width:50%">Name of Dog</th>
							<th style="width:10%">Name of Requester</th>
							<th style="width:22%" class="text-center">Email Address</th>
							<th style="width:10%">Request Status</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td data-th="Product">
								<div class="row">
									<div class="col-sm-2 hidden-xs"><img src="../uploads/{{dog.image}}" alt="..." class="img-responsive"/></div>
									<div class="col-sm-10">
										<h4 class="nomargin">{{reqDog}}</h4>
										<p>{{dog.description}}</p>
									</div>
								</div>
							</td>
							<td data-th="reqName">{{reqName}}</td>
							<td data-th="reqEmail" class="text-center">{{reqEmail}}</td>
							<td class="reqStatus" data-th="">{{reqStatus}}</td>
						</tr>
					</tbody>
					
				</table>
    {{/each}}
</div>
    
{{> footer}}